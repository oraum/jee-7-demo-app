<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.example</groupId>
    <artifactId>jee7demo</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <modules>
        <module>webapp</module>
        <module>ear</module>
    </modules>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <project.contextRoot>jee7demo</project.contextRoot>
    </properties>

    <!--distributionManagement>
        <repository>
            <id>internal</id>
            <name>internal release repo</name>
            <url>https://localhost:18443/repository/maven-releases/</url>
        </repository>
        <snapshotRepository>
            <id>snapshot</id>
            <name>internal snapshot repo</name>
            <url>https://localhost:18443/repository/maven-snapshots/</url>
        </snapshotRepository>
    </distributionManagement -->

    <build>
        <finalName>${project.contextRoot}</finalName>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-release-plugin</artifactId>
                    <version>2.5.3</version>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-war-plugin</artifactId>
                    <version>3.1.0</version>
                    <configuration>
                        <filteringDeploymentDescriptors>true</filteringDeploymentDescriptors>
                        <archive>
                            <addMavenDescriptor>false</addMavenDescriptor>
                        </archive>
                    </configuration>
                </plugin>

                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-ear-plugin</artifactId>
                    <version>2.10.1</version>
                    <configuration>
                        <version>6</version>
                        <defaultLibBundleDir>lib</defaultLibBundleDir>
                        <skinnyWars>false</skinnyWars> <!-- nicht genutzt, wirkt sich nur auf transitive Abhaengigkeiten im WEB
							aus -->
                        <generateModuleId>true</generateModuleId>
                        <generateApplicationXml>true</generateApplicationXml>
                        <packagingExcludes>META-INF/ibmconfig/**</packagingExcludes>
                        <modules>
                            <webModule>
                                <groupId>${project.parent.groupId}</groupId>
                                <artifactId>jee7demo-webapp</artifactId>
                                <bundleFileName>jee7demo.war</bundleFileName>
                                <contextRoot>/${project.contextRoot}</contextRoot>
                                <bundleDir>/</bundleDir>
                            </webModule>
                        </modules>
                        <archive>
                            <addMavenDescriptor>false</addMavenDescriptor>
                            <manifest>
                                <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
                                <addDefaultSpecificationEntries>true</addDefaultSpecificationEntries>
                            </manifest>
                            <manifestEntries>
                                <Implementation-SCM-Revision-Number>${buildNumber}</Implementation-SCM-Revision-Number>
                                <Build-Date>${build.time}</Build-Date>
                                <Implementation-Timestamp>${timestamp}</Implementation-Timestamp>
                                <Java-Version>${java.version}</Java-Version>
                                <Java-Vendor>${java.vendor}</Java-Vendor>
                            </manifestEntries>
                        </archive>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>
</project>